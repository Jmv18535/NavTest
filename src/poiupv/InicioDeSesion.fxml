<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poiupv.InicioDeSesionController">
    <stylesheets>
        <URL value="@iniciodesesion.css" />
    </stylesheets>
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@registro.css">
         <center>
            <VBox prefHeight="400.0" prefWidth="184.0" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="108.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Label prefHeight="70.0" prefWidth="427.0" text="INICIAR SESIÓN" textAlignment="CENTER">
                           <padding>
                              <Insets left="250.0" />
                           </padding></Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="88.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Label prefHeight="30.0" prefWidth="100.0" text="     Usuario" />
                        <TextField fx:id="nomUsuario" maxHeight="30.0" maxWidth="200.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label prefHeight="30.0" prefWidth="100.0" text="   Contraseña" />
                        <PasswordField fx:id="contraUsuario" maxHeight="30.0" maxWidth="200.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="60.0" right="30.0" top="70.0" />
               </padding>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="textoError" editable="false" prefHeight="200.0" prefWidth="200.0" visible="false" />
                  <Button mnemonicParsing="false" onAction="#PulsadoCancelar" prefHeight="40.0" prefWidth="120.0" text="Cancelar" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#PulsadoEntrar" prefHeight="40.0" prefWidth="120.0" text="Entrar" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="50.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
